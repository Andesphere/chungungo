<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Signal / Summary Lab</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:wght@400;700&family=Fraunces:opsz,wght@9..144,500;9..144,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <main class="page">
      <header class="hero">
        <div>
          <p class="eyebrow">Local POC ¬∑ Astro + Bun + SQLite + Clawdbot AI</p>
          <h1>Signal / Summary Lab</h1>
          <p class="lead">
            Paste a link from YouTube or X/Twitter, and get an AI-powered summary.
            Technical content gets deeper analysis with actionable insights.
          </p>
        </div>
        <div class="badge">
          <span>POC</span>
          <p>Clawdbot‚Äëpowered</p>
        </div>
      </header>

      <section class="input-panel">
        <form id="summary-form">
          <label>
            <span>Content URL</span>
            <input
              name="url"
              type="url"
              placeholder="YouTube or X/Twitter URL..."
              required
            />
          </label>
          <button type="submit">Summarize</button>
        </form>
        <div class="channel-hints">
          <span class="hint youtube">üì∫ YouTube</span>
          <span class="hint twitter">ùïè Twitter</span>
        </div>
        <p id="status" class="status">Drop a link and hit summarize.</p>
      </section>

      <section class="summary-list" id="summary-list" data-empty={summaries.length === 0}>
        <div class="empty">
          <p>No summaries yet.</p>
          <span>First one always feels good.</span>
        </div>
        {summaries.map((summary) => {
          const badge = getBadge(summary.type);
          const channel = getChannelBadge(summary.source);
          const showDetails = hasDetails(summary);
          const transcriptLabel = summary.source === "twitter" 
            ? (summary.transcriptSource === "thread" ? "Thread" : "Tweet")
            : (summary.transcriptSource === "whisper" ? "Whisper" : "Captions");
          return (
            <article class="summary-card" data-id={summary.id} data-source={summary.source}>
              <header>
                <div class="meta">
                  <span class={`channel-badge ${summary.source}`} style={`--channel-color: ${channel.color}`}>
                    {channel.emoji} {channel.label}
                  </span>
                  <span class={`pill ${summary.transcriptSource}`}>
                    {transcriptLabel}
                  </span>
                  <span class="type-badge" style={`--badge-color: ${badge.color}`}>
                    {badge.emoji} {badge.label}
                  </span>
                  {summary.model && (
                    <span class="model-badge">
                      ü§ñ {summary.model}
                    </span>
                  )}
                </div>
                <time>{new Date(summary.createdAt).toLocaleString()}</time>
              </header>
              <h2>{summary.title ?? "Untitled content"}</h2>
              <p class="summary-text">{summary.summary}</p>
              <footer>
                <a href={summary.url} target="_blank" rel="noreferrer">
                  View source ‚Üí
                </a>
                {showDetails && (
                  <button
                    class="details-btn"
                    data-summary={JSON.stringify({
                      title: summary.title,
                      type: summary.type,
                      source: summary.source,
                      detailedAnalysis: summary.detailedAnalysis,
                      takeaways: summary.takeaways,
                      actionItems: summary.actionItems,
                      skillIdeas: summary.skillIdeas,
                      integrations: summary.integrations,
                    })}
                  >
                    View Details
                  </button>
                )}
              </footer>
            </article>
          );
        })}
      </section>
    </main>

    <!-- Modal -->
    <div id="modal" class="modal" hidden>
      <div class="modal-backdrop"></div>
      <div class="modal-content">
        <header class="modal-header">
          <h2 id="modal-title">Details</h2>
          <button class="modal-close" aria-label="Close">√ó</button>
        </header>
        <div id="modal-body" class="modal-body">
          <!-- Filled by JS -->
        </div>
      </div>
    </div>

    <script>
      const form = document.getElementById("summary-form");
      const statusEl = document.getElementById("status");
      const listEl = document.getElementById("summary-list");
      const modal = document.getElementById("modal");
      const modalTitle = document.getElementById("modal-title");
      const modalBody = document.getElementById("modal-body");

      const typeBadges = {
        coding: { emoji: "üîß", label: "Coding", color: "#ff8a60" },
        ai: { emoji: "ü§ñ", label: "AI", color: "#c784ff" },
        productivity: { emoji: "‚ö°", label: "Productivity", color: "#5bffdd" },
        general: { emoji: "üì∫", label: "General", color: "rgba(248, 245, 241, 0.5)" },
      };

      const channelBadges = {
        youtube: { emoji: "üì∫", label: "YouTube", color: "#ff0000" },
        twitter: { emoji: "ùïè", label: "Twitter", color: "#1da1f2" },
        article: { emoji: "üì∞", label: "Article", color: "#4ade80" },
      };

      const setStatus = (message, tone = "neutral") => {
        statusEl.textContent = message;
        statusEl.dataset.tone = tone;
      };

      const hasDetails = (summary) => {
        return (
          summary.detailedAnalysis ||
          (summary.takeaways && summary.takeaways.length > 0) ||
          (summary.actionItems && summary.actionItems.length > 0) ||
          (summary.skillIdeas && summary.skillIdeas.length > 0) ||
          (summary.integrations && summary.integrations.length > 0)
        );
      };

      const renderSummary = (summary) => {
        const card = document.createElement("article");
        card.className = "summary-card";
        card.dataset.id = summary.id;
        card.dataset.source = summary.source || "youtube";
        
        const badge = typeBadges[summary.type] || typeBadges.general;
        const channel = channelBadges[summary.source] || channelBadges.youtube;
        const transcriptLabel = summary.source === "twitter"
          ? (summary.transcriptSource === "thread" ? "Thread" : "Tweet")
          : (summary.transcriptSource === "whisper" ? "Whisper" : "Captions");
        const showDetails = hasDetails(summary);
        
        card.innerHTML = `
          <header>
            <div class="meta">
              <span class="channel-badge ${summary.source || 'youtube'}" style="--channel-color: ${channel.color}">
                ${channel.emoji} ${channel.label}
              </span>
              <span class="pill ${summary.transcriptSource}">${transcriptLabel}</span>
              <span class="type-badge" style="--badge-color: ${badge.color}">
                ${badge.emoji} ${badge.label}
              </span>
              ${summary.model ? `<span class="model-badge">ü§ñ ${summary.model}</span>` : ''}
            </div>
            <time>${new Date(summary.createdAt).toLocaleString()}</time>
          </header>
          <h2>${summary.title ?? "Untitled content"}</h2>
          <p class="summary-text">${summary.summary}</p>
          <footer>
            <a href="${summary.url}" target="_blank" rel="noreferrer">View source ‚Üí</a>
            ${showDetails ? `
              <button class="details-btn" data-summary='${JSON.stringify({
                title: summary.title,
                type: summary.type,
                source: summary.source,
                detailedAnalysis: summary.detailedAnalysis,
                takeaways: summary.takeaways || [],
                actionItems: summary.actionItems || [],
                skillIdeas: summary.skillIdeas || [],
                integrations: summary.integrations || [],
              })}'>View Details</button>
            ` : ''}
          </footer>
        `;
        
        listEl.prepend(card);
        listEl.dataset.empty = "false";
      };

      // Modal functions
      const openModal = (data) => {
        modalTitle.textContent = data.title || "Video Details";
        
        let html = "";
        
        if (data.detailedAnalysis) {
          html += `
            <section class="modal-section">
              <h3>üìù Detailed Analysis</h3>
              <p>${data.detailedAnalysis}</p>
            </section>
          `;
        }
        
        if (data.takeaways && data.takeaways.length > 0) {
          html += `
            <section class="modal-section">
              <h3>üí° Key Takeaways</h3>
              <ul>${data.takeaways.map(t => `<li>${t}</li>`).join("")}</ul>
            </section>
          `;
        }
        
        if (data.actionItems && data.actionItems.length > 0) {
          html += `
            <section class="modal-section">
              <h3>‚úÖ Action Items</h3>
              <ul class="action-list">${data.actionItems.map(a => `<li>${a}</li>`).join("")}</ul>
            </section>
          `;
        }
        
        if (data.skillIdeas && data.skillIdeas.length > 0) {
          html += `
            <section class="modal-section highlight">
              <h3>üîß Clawdbot Skill Ideas</h3>
              <ul>${data.skillIdeas.map(s => `<li>${s}</li>`).join("")}</ul>
            </section>
          `;
        }
        
        if (data.integrations && data.integrations.length > 0) {
          html += `
            <section class="modal-section highlight">
              <h3>üîó Pudu/Clawdbot Integration Opportunities</h3>
              <ul>${data.integrations.map(i => `<li>${i}</li>`).join("")}</ul>
            </section>
          `;
        }
        
        modalBody.innerHTML = html || "<p>No additional details available.</p>";
        modal.hidden = false;
        document.body.style.overflow = "hidden";
      };

      const closeModal = () => {
        modal.hidden = true;
        document.body.style.overflow = "";
      };

      // Event listeners
      document.addEventListener("click", (e) => {
        const detailsBtn = e.target.closest(".details-btn");
        if (detailsBtn) {
          const data = JSON.parse(detailsBtn.dataset.summary);
          openModal(data);
          return;
        }
        
        if (e.target.closest(".modal-close") || e.target.closest(".modal-backdrop")) {
          closeModal();
        }
      });

      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && !modal.hidden) {
          closeModal();
        }
      });

      form.addEventListener("submit", async (event) => {
        event.preventDefault();
        const formData = new FormData(form);
        const url = formData.get("url");
        if (!url) return;

        setStatus("Fetching transcript and building AI summary‚Ä¶", "busy");
        form.querySelector("button").disabled = true;

        try {
          const res = await fetch("/api/summarize", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ url }),
          });

          const data = await res.json();
          if (!res.ok) {
            throw new Error(data.error || "Failed to summarize.");
          }

          renderSummary(data);
          form.reset();
          setStatus("Summary stored. Drop another link.", "success");
        } catch (error) {
          setStatus(error.message || "Something went wrong.", "error");
        } finally {
          form.querySelector("button").disabled = false;
        }
      });
    </script>
  </body>
</html>

