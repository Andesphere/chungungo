import { listSummaries, type ParsedSummary } from "../lib/db";

const summaries = listSummaries();

const typeBadges: Record<string, { emoji: string; label: string; color: string }> = {
  coding: { emoji: "üîß", label: "Coding", color: "#ff8a60" },
  ai: { emoji: "ü§ñ", label: "AI", color: "#c784ff" },
  productivity: { emoji: "‚ö°", label: "Productivity", color: "#5bffdd" },
  general: { emoji: "üì∫", label: "General", color: "rgba(248, 245, 241, 0.5)" },
};

const channelBadges: Record<string, { emoji: string; label: string; color: string }> = {
  youtube: { emoji: "üì∫", label: "YouTube", color: "#ff0000" },
  twitter: { emoji: "ùïè", label: "Twitter", color: "#1da1f2" },
  article: { emoji: "üì∞", label: "Article", color: "#4ade80" },
};

function getBadge(type: string) {
  return typeBadges[type] || typeBadges.general;
}

function getChannelBadge(source: string) {
  return channelBadges[source] || channelBadges.youtube;
}

function hasDetails(summary: ParsedSummary) {
  return (
    summary.detailedAnalysis ||
    summary.takeaways.length > 0 ||
    summary.actionItems.length > 0 ||
    summary.skillIdeas.length > 0 ||
    summary.integrations.length > 0
  );
}
